# Scopus Research Chatbot Configuration
# Copy this file to .env and update with your actual values

# Scopus API Configuration
SCOPUS_API_KEY=
SCOPUS_BASE_URL=https://api.elsevier.com/content/search/scopus

# Database Configuration
DATABASE_PATH=./data/scopus_chatbot.db
VECTOR_INDEX_PATH=./data/vector_index

# Flask Web Server Configuration
FLASK_HOST='127.0.0.1'
FLASK_PORT=5000
FLASK_DEBUG=False
FLASK_SECRET_KEY=your_secret_key_here

# Optional Configuration
SCOPUS_REQUESTS_PER_SECOND=2
SCOPUS_MAX_RESULTS_PER_REQUEST=25
EMBEDDING_MODEL_NAME=all-MiniLM-L6-v2
VECTOR_INDEX_TYPE=flat
LOG_LEVEL=DEBUG

